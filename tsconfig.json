{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "es2017",
    "outDir": "out",
    "sourceMap": true
    //"strictNullChecks": false
  },
  "files": ["index.ts"],
  "include": ["src/*"],
  "exclude": ["node_modules/**/*"],
}
